    "static-analysis",
    "cli",
    "scanner",
    "mcp",
    "mcp-server",
    "cursor",
    "copilot",
    "v0",
    "bolt",
    "windsurf",
    "claude",
    "github-action",
    "eslint-alternative",
    "devtools"
  ]
}
